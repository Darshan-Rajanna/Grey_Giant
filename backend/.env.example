# GitHub Configuration
# Use fine-grained personal access token (github_pat_...) with:
# - Repository access: Only selected repositories (grey_gaint)
# - Repository permissions: Contents (Read & Write)
GITHUB_TOKEN=github_pat_xxxxxxxxxxxxxxxxxxxxx
GITHUB_OWNER=Amulyaaar
GITHUB_REPO=grey_gaint

# TOTP Secret (generate using speakeasy.generateSecret())
# Run: node -e "const s=require('speakeasy').generateSecret({name:'GreyGaint'}); console.log(s.base32)"
OTP_SECRET=YOUR_BASE32_SECRET

# JWT Secret (use strong random string, 64+ characters)
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
# For local development: http://localhost:5000
# For production (GitHub Pages): https://amulyaaar.github.io
FRONTEND_URL=http://localhost:5000

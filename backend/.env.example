# Grey Gaint Backend - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# GitHub API Configuration
# ============================================

# Your GitHub Personal Access Token (PAT)
# Generate at: https://github.com/settings/tokens
# Required permissions:
#   - Fine-grained token: Repository â†’ Contents (Read & Write)
#   - Classic token: repo scope
GITHUB_TOKEN=your_github_token_here

# GitHub repository owner (username or organization)
GITHUB_OWNER=Amulyaaar

# GitHub repository name
GITHUB_REPO=grey_gaint

# ============================================
# Authentication Configuration
# ============================================

# OTP Secret for TOTP authentication
# Generate using: node -e "const s=require('speakeasy'); const secret=s.generateSecret({length:32}); console.log('OTP_SECRET=' + secret.base32);"
OTP_SECRET=your_otp_secret_here

# JWT Secret for session tokens (use a random 64-character hex string)
# Generate using: node -e "console.log('JWT_SECRET=' + require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here

# ============================================
# Server Configuration
# ============================================

# Port number (Render will override this with process.env.PORT)
PORT=3001

# Environment (development or production)
NODE_ENV=development

# ============================================
# CORS Configuration
# ============================================

# Frontend URL for CORS (allow requests from this origin)
# Development: http://localhost:5173 or http://localhost:5000
# Production: https://amulyaaar.github.io
FRONTEND_URL=http://localhost:5000
